@model IEnumerable<News>
<div class="list container-fluid mt-4">
    <span class="header h3 bg-dark text-white px-4 pt-2">Listeler</span>
    <div class="border-bottom" style="border-bottom: 4px solid #343a40 !important;"></div>

    <div class="row mt-3">
        @foreach (var item in Model)
        {


            <div class="col-12 col-md-6 col-lg-4">
                <div class="card mb-3" style="max-width: 540px; border-style:none!important;">
                    <div class="row no-gutters">
                   
                        <div class="col-md-4">
                            <a asp-action="Details" asp-controller="Home" asp-route-title="@item.NewsTitle" class="text-dark">
                                <img src="~/img/@item.Image" style="height:100%" class="card-img " alt="...">
                            </a>
                        </div>
                            <div class="col-md-8 slider">

                                <div class="card-body">
                                    <a asp-action="Details" asp-controller="Home" asp-route-title="@item.NewsTitle" class="text-dark">
                                        <p class="card-text"><small class="text-muted">@item.CategoryName</small></p>
                                        <h5 class="card-title">@item.NewsTitle</h5>

                                        <p class="card-text clock"><small class="text-muted mx-2 ">@item.NewsTime</small></p>
                                    </a>
                                </div>

                            </div>
                      
                    </div>
                </div>
            </div>
        }
    </div>

     }
</div>